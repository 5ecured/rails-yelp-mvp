<%= simple_form_for @restaurant do |f| %>
  <%= f.input :name %>
  <%= f.input :address %>
  <%= f.input :phone_number%>
  <%= f.input :category%>
  <%= f.submit "add a review", class: "btn btn-primary" %>
<% end %>

<%= render 'form' %>  <!--this 'form' refers to whatever the partial name is, minus the _ -->

<%= render 'goback' %>

